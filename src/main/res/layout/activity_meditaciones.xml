<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Meditaciones" />

    <Button
        android:id="@+id/btnPlay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meditacion 1" />

    <Button
        android:id="@+id/btnPlay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meditacion 2" />

    <Button
        android:id="@+id/btnPlay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meditacion 3" />

    <Button
        android:id="@+id/btnPlay4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meditacion 4" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnPause"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableBottom="@drawable/ic_pause"
            android:drawablePadding="8dp"
            />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableBottom="@drawable/ic_stop"
            android:drawablePadding="8dp"
            />

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableBottom="@drawable/ic_play"
            android:drawablePadding="8dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/voleree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"/>

</LinearLayout>
